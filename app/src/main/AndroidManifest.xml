<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sg.edu.np.madassignment_chefsbook">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MADAssignment">
        <activity
            android:name="sg.edu.np.madassignment_chefsbook.RecipeDetail"
            android:label="@string/title_activity_recipe_detail"
            android:theme="@style/Theme.MADAssignment.NoActionBar" />
        <activity
            android:name="sg.edu.np.madassignment_chefsbook.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.MADAssignment.NoActionBar" />
        <activity android:name="sg.edu.np.madassignment_chefsbook.AddRecipeActivity" />
        <activity android:name="sg.edu.np.madassignment_chefsbook.SearchActivity"/>
        <activity android:name="sg.edu.np.madassignment_chefsbook.HomeActivity" />
        <activity android:name="sg.edu.np.madassignment_chefsbook.LoginActivity"/>
        <activity android:name="sg.edu.np.madassignment_chefsbook.ShoppingListActivity"/>
        <activity android:name="sg.edu.np.madassignment_chefsbook.ShoppingListIngredients"/>
        <activity android:name="sg.edu.np.madassignment_chefsbook.OnBoardActivity">

        </activity>
        <activity android:name="sg.edu.np.madassignment_chefsbook.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>